<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_connect_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_to_server"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/server_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/server_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="@string/server_name"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/connect_server_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/server_password"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/server_password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="@string/server_password"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBaseline_toBaselineOf="@id/server_name"
        app:layout_constraintBottom_toTopOf="@id/connect_server_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/server_name"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connect_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actual_email"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actual_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actual_email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/affichage_actual_email"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/affichage_actual_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modifier_email"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/modifier_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/actual_password"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="@string/new_email"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        app:layout_constraintBaseline_toBaselineOf="@id/modifier_email"
        app:layout_constraintBottom_toTopOf="@id/actual_password"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actual_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actual_password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/affichage_actual_password"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/affichage_actual_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modifier_password"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/modifier_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_paswsord"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modify_button"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="@string/new_password"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBaseline_toBaselineOf="@id/modifier_password"
        app:layout_constraintBottom_toTopOf="@id/modify_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify"
        android:textSize="18sp"
        android:layout_marginBottom="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>